{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES6",
    "module": "ES6",
    "jsx": "preserve",
    "types": ["vue"],
    "allowSyntheticDefaultImports": true
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": false
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
